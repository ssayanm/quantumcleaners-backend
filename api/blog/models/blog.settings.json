{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "name": "blog",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "blogposts",
        "events"
      ],
      "default": "blogposts",
      "required": true
    },
    "desc": {
      "type": "text",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true,
      "default": "2021-05-12T06:30:00.000Z"
    },
    "author": {
      "type": "string",
      "required": false,
      "default": "Pleasant Smith"
    }
  }
}
